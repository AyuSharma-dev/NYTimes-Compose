<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/cardview_default_elevation"
        android:fitsSystemWindows="true"
        app:elevation="@dimen/cardview_default_elevation">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/background"
            app:layout_collapseMode="parallax"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand_semibold"
                android:gravity="center"
                android:text="@string/bookmarks_title"
                android:textColor="@color/headingColor"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_left" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_bookmarks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:spanCount="2" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.home.HomeFragment">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.bookmarks.BookmarkFragment">

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="VectorDrawableCompat">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/cat_card_single_spacing">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/cat_card_double_spacing"
                        android:text="@string/cat_card_rich_media_sample_1"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/mtrl_card_spacing"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cat_card_double_spacing"
                                android:paddingBottom="@dimen/cat_card_single_spacing">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/cat_card_single_spacing"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical"
                                    android:paddingTop="@dimen/cat_card_single_spacing">

                                    <TextView
                                        style="?attr/textAppearanceHeadline5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/cat_card_rich_media_view_title" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/cat_card_single_spacing"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:text="@string/cat_card_rich_media_view_secondary_line_text" />
                                </LinearLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginLeft="@dimen/cat_card_single_spacing"
                                    android:background="@android:color/transparent"
                                    android:contentDescription="@string/cat_card_rich_media_image_view_description"
                                    app:backgroundTint="@color/material_on_surface_emphasis_medium"
                                    app:backgroundTintMode="add"
                                    app:srcCompat="@drawable/ic_launcher_background" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/cat_card_single_spacing"
                                android:paddingHorizontal="@dimen/cat_card_single_spacing">

                                <com.google.android.material.button.MaterialButton
                                    style="?attr/borderlessButtonStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/cat_card_single_spacing"
                                    android:layout_marginRight="@dimen/cat_card_single_spacing"
                                    android:text="@string/cat_card_rich_media_action_1" />

                                <com.google.android.material.button.MaterialButton
                                    style="?attr/borderlessButtonStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/cat_card_single_spacing"
                                    android:layout_marginRight="@dimen/cat_card_single_spacing"
                                    android:text="@string/cat_card_rich_media_action_2" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/cat_card_rich_media_sample_2"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/mtrl_card_spacing"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cat_card_double_spacing"
                                android:paddingBottom="@dimen/cat_card_single_spacing">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="@dimen/cat_card_single_spacing"
                                    android:layout_marginRight="@dimen/cat_card_single_spacing"
                                    android:contentDescription="@string/cat_card_rich_media_logo_view_description"
                                    app:srcCompat="@drawable/ic_launcher_background" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/cat_card_single_spacing"
                                    android:layout_marginLeft="@dimen/cat_card_single_spacing"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        style="?attr/textAppearanceHeadline6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/cat_card_rich_media_view_title" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/cat_card_single_spacing"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/cat_card_rich_media_view_secondary_line_text" />
                                </LinearLayout>
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="194dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/cat_card_rich_media_image_view_description"
                                app:backgroundTint="@color/material_on_surface_emphasis_medium"
                                app:backgroundTintMode="add"
                                app:srcCompat="@drawable/ic_launcher_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/cat_card_double_spacing"
                                android:maxLines="2"
                                android:text="@string/cat_card_selectable_content" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/cat_card_single_spacing">

                                <com.google.android.material.button.MaterialButton
                                    style="?attr/borderlessButtonStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/cat_card_single_spacing"
                                    android:layout_marginRight="@dimen/cat_card_single_spacing"
                                    android:text="@string/cat_card_rich_media_action_1" />

                                <com.google.android.material.button.MaterialButton
                                    style="?attr/borderlessButtonStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/cat_card_single_spacing"
                                    android:layout_marginRight="@dimen/cat_card_single_spacing"
                                    android:text="@string/cat_card_rich_media_action_2" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/cat_card_rich_media_sample_3"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/mtrl_card_spacing"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="194dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/cat_card_rich_media_image_view_description"
                                app:backgroundTint="@color/material_on_surface_emphasis_medium"
                                app:backgroundTintMode="add"
                                app:srcCompat="@drawable/ic_launcher_background" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/cat_card_double_spacing"
                                android:paddingBottom="@dimen/cat_card_single_spacing">

                                <TextView
                                    style="?attr/textAppearanceHeadline5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/cat_card_single_spacing"
                                    android:text="@string/cat_card_rich_media_view_title" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RatingBar
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/cat_card_rich_media_rating_view_description"
                                        android:isIndicator="true"
                                        android:numStars="5"
                                        android:rating="4.5"

                                        android:stepSize="0.5" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/cat_card_rich_media_rating_text" />
                                </LinearLayout>

                                <TextView
                                    style="?attr/textAppearanceSubtitle1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/cat_card_double_spacing"
                                    android:singleLine="true"
                                    android:text="@string/cat_card_rich_media_view_secondary_line_text" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/cat_card_single_spacing"
                                    android:maxLines="2"
                                    android:text="@string/cat_card_selectable_content" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/cat_card_triple_spacing"
                                    android:layout_marginBottom="@dimen/cat_card_single_spacing"
                                    android:background="?attr/dividerHorizontal" />

                                <TextView
                                    style="?attr/textAppearanceHeadline6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/cat_card_double_spacing"
                                    android:layout_marginBottom="@dimen/cat_card_single_spacing"
                                    android:text="@string/cat_card_rich_media_view_subtitle" />

                                <com.google.android.material.chip.ChipGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.google.android.material.chip.Chip
                                        style="@style/Widget.MaterialComponents.Chip.Action"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/cat_card_rich_media_chip_title_1" />

                                    <com.google.android.material.chip.Chip
                                        style="@style/Widget.MaterialComponents.Chip.Action"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/cat_card_rich_media_chip_title_2" />

                                    <com.google.android.material.chip.Chip
                                        style="@style/Widget.MaterialComponents.Chip.Action"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/cat_card_rich_media_chip_title_3" />

                                    <com.google.android.material.chip.Chip
                                        style="@style/Widget.MaterialComponents.Chip.Action"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/cat_card_rich_media_chip_title_4" />
                                </com.google.android.material.chip.ChipGroup>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/cat_card_single_spacing"
                                android:paddingRight="@dimen/cat_card_single_spacing"
                                android:paddingBottom="@dimen/cat_card_single_spacing">

                                <com.google.android.material.button.MaterialButton
                                    style="?attr/borderlessButtonStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/cat_card_single_spacing"
                                    android:layout_marginRight="@dimen/cat_card_single_spacing"
                                    android:text="@string/cat_card_rich_media_action_1" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </ScrollView>

        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>