<resources>
    <!-- Base application theme. -->
    <style name="Theme.TheNewYorkTimesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/headingColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/headingBackgroundColor</item>
    </style>

    <style name="TabBarTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/headingColor</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/headingColor</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Theme.TheNewYorkTimesApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TheNewYorkTimesApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TheNewYorkTimesApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>